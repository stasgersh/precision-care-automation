{
  "configType": "entity",
  "classId": "socialHistory",
  "definitions": [
    {
      "resourceType": "Observation",
      "filters": [
        {
          "type": "terminology",
          "conditions": [
            {
              "path": "$.category",
              "include": "social-history-observation-category-vs"
            }
          ]
        }
      ],
      "date": [
        {
          "source": {
            "path": "$.effectivePeriod"
          },
          "processor": "periodDateText"
        },
        {
          "source": {
            "path": "$.effectiveDateTime"
          }
        },
        {
          "source": {
            "path": "$.issued"
          }
        }
      ],
      "attributes": [
        {
          "key": "category",
          "valueExtraction": [
            {
              "source": {
                "path": "$.category"
              }
            }
          ]
        },
        {
          "key": "code",
          "valueExtraction": [
            {
              "source": {
                "path": "$.code"
              }
            }
          ]
        },
        {
          "key": "status",
          "valueExtraction": [
            {
              "source": {
                "path": "$.status"
              }
            }
          ]
        },
        {
          "key": "value",
          "valueExtraction": [
            {
              "source": {
                "path": "$"
              },
              "processor": "observationValueText"
            }
          ]
        },
        {
          "key": "trendKey",
          "valueExtraction": [
            {
              "source": {
                "path": "$"
              },
              "processor": "trendKey"
            }
          ]
        },
        {
          "key": "referenceRange",
          "valueExtraction": [
            {
              "source": {
                "path": "$.referenceRange[*]"
              }
            }
          ]
        },
        {
          "key": "valueQuantity",
          "valueExtraction": [
            {
              "source": {
                "path": "$",
                "attributes": [
                  {
                    "key": "unit",
                    "valueExtraction": [
                      {
                        "source": {
                          "path": "$.valueQuantity.unit"
                        }
                      }
                    ]
                  },
                  {
                    "key": "system",
                    "valueExtraction": [
                      {
                        "source": {
                          "path": "$.valueQuantity.system"
                        }
                      }
                    ]
                  },
                  {
                    "key": "code",
                    "valueExtraction": [
                      {
                        "source": {
                          "path": "$.valueQuantity.code"
                        }
                      }
                    ]
                  },
                  {
                    "key": "value",
                    "valueExtraction": [
                      {
                        "source": {
                          "path": "$.valueQuantity.value"
                        }
                      },
                      {
                        "source": {
                          "path": "$.valueInteger"
                        }
                      }
                    ]
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "postProcessing": {
    "subclasses": [
      {
        "subclassId": "substanceHistory",
        "filters": [
          {
            "type": "terminology",
            "conditions": [
              {
                "path": "$.code",
                "include": "smoking-history-vs"
              }
            ]
          },
          {
            "type": "terminology",
            "conditions": [
              {
                "path": "$.code",
                "include": "alcohol-history-vs"
              }
            ]
          }
        ]
      },
      {
        "subclassId": "oncoContext",
        "filters": []
      }
    ]
  }
}